<ui:FluentWindow x:Class="WorkHoursTimer.WorkTimeSettingsDialog"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 Title="工作时间设置"
                 Width="400"
                 Height="300"
                 WindowStartupLocation="CenterOwner"
                 ResizeMode="NoResize"
                 ExtendsContentIntoTitleBar="True"
                 WindowBackdropType="Mica">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 标题栏 -->
        <ui:TitleBar Grid.Row="0" Title="工作时间设置"/>
        
        <!-- 标题 -->
        <TextBlock Grid.Row="1"
                   Text="⏰ 自定义工作时间"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,8,0,20"/>
        
        <!-- 设置内容 -->
        <StackPanel Grid.Row="2">
            <!-- 工作开始时间 -->
            <TextBlock Text="上班时间"
                       FontSize="14"
                       Margin="0,0,0,8"/>
            
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Slider x:Name="StartHourSlider"
                        Grid.Column="0"
                        Minimum="0"
                        Maximum="23"
                        Value="9"
                        TickFrequency="1"
                        IsSnapToTickEnabled="True"
                        VerticalAlignment="Center"
                        ValueChanged="StartHourSlider_ValueChanged"/>
                
                <TextBlock Grid.Column="1"
                           x:Name="StartHourText"
                           Text="09:00"
                           FontSize="16"
                           FontWeight="Bold"
                           Width="60"
                           TextAlignment="Right"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"/>
            </Grid>
            
            <!-- 工作结束时间 -->
            <TextBlock Text="下班时间"
                       FontSize="14"
                       Margin="0,0,0,8"/>
            
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Slider x:Name="EndHourSlider"
                        Grid.Column="0"
                        Minimum="0"
                        Maximum="23"
                        Value="18"
                        TickFrequency="1"
                        IsSnapToTickEnabled="True"
                        VerticalAlignment="Center"
                        ValueChanged="EndHourSlider_ValueChanged"/>
                
                <TextBlock Grid.Column="1"
                           x:Name="EndHourText"
                           Text="18:00"
                           FontSize="16"
                           FontWeight="Bold"
                           Width="60"
                           TextAlignment="Right"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"/>
            </Grid>
            
            <!-- 工作时长显示 -->
            <Border Background="#20FFFFFF"
                    BorderBrush="#80808080"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="12">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <TextBlock Text="工作时长："
                               FontSize="12"
                               Foreground="#B0B0B0"/>
                    <TextBlock x:Name="WorkDurationText"
                               Text="9 小时"
                               FontSize="12"
                               FontWeight="Bold"
                               Foreground="#FFD700"
                               Margin="4,0,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>
        
        <!-- 按钮 -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <ui:Button Content="确定"
                       Width="100"
                       Margin="0,0,8,0"
                       Appearance="Primary"
                       Click="OkButton_Click"/>
            
            <ui:Button Content="取消"
                       Width="100"
                       Appearance="Secondary"
                       Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</ui:FluentWindow>
