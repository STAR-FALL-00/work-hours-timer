<Window x:Class="WorkHoursTimer.HotkeySettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="快捷键设置"
        Width="500"
        Height="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource ApplicationBackgroundBrush}"
        Topmost="True">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 标题 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="⌨️ 全局快捷键设置"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="{StaticResource TextPrimary}"/>
            <TextBlock Text="在任何地方都可以使用这些快捷键控制应用"
                       FontSize="12"
                       Foreground="{StaticResource TextSecondary}"
                       Margin="0,4,0,0"/>
        </StackPanel>
        
        <!-- 快捷键列表 -->
        <Border Grid.Row="1"
                Background="#20FFFFFF"
                BorderBrush="{StaticResource TextSecondary}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16">
            <StackPanel>
                <!-- 开始/暂停 -->
                <Border Background="#10FFFFFF"
                        BorderBrush="{StaticResource AccentGold}"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="12"
                        Margin="0,0,0,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="开始/暂停工作"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimary}"/>
                            <TextBlock Text="开始新的工作会话，或暂停/恢复当前工作"
                                       FontSize="11"
                                       Foreground="{StaticResource TextSecondary}"
                                       Margin="0,4,0,0"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                        
                        <Border Grid.Column="1"
                                Background="{StaticResource AccentGold}"
                                CornerRadius="4"
                                Padding="8,4">
                            <TextBlock Text="Ctrl+Alt+S"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       Foreground="#1A1A2E"/>
                        </Border>
                    </Grid>
                </Border>
                
                <!-- 停止工作 -->
                <Border Background="#10FFFFFF"
                        BorderBrush="#FF4757"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="12"
                        Margin="0,0,0,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="停止工作"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimary}"/>
                            <TextBlock Text="结束当前工作会话并保存数据"
                                       FontSize="11"
                                       Foreground="{StaticResource TextSecondary}"
                                       Margin="0,4,0,0"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                        
                        <Border Grid.Column="1"
                                Background="#FF4757"
                                CornerRadius="4"
                                Padding="8,4">
                            <TextBlock Text="Ctrl+Alt+E"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                        </Border>
                    </Grid>
                </Border>
                
                <!-- 显示/隐藏主窗口 -->
                <Border Background="#10FFFFFF"
                        BorderBrush="#4A90E2"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="12"
                        Margin="0,0,0,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="显示/隐藏主窗口"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimary}"/>
                            <TextBlock Text="快速切换主窗口的显示状态"
                                       FontSize="11"
                                       Foreground="{StaticResource TextSecondary}"
                                       Margin="0,4,0,0"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                        
                        <Border Grid.Column="1"
                                Background="#4A90E2"
                                CornerRadius="4"
                                Padding="8,4">
                            <TextBlock Text="Ctrl+Alt+H"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                        </Border>
                    </Grid>
                </Border>
                
                <!-- 显示/隐藏挂件 -->
                <Border Background="#10FFFFFF"
                        BorderBrush="#2ECC71"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="显示/隐藏挂件窗口"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimary}"/>
                            <TextBlock Text="快速切换挂件窗口的显示状态"
                                       FontSize="11"
                                       Foreground="{StaticResource TextSecondary}"
                                       Margin="0,4,0,0"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                        
                        <Border Grid.Column="1"
                                Background="#2ECC71"
                                CornerRadius="4"
                                Padding="8,4">
                            <TextBlock Text="Ctrl+Alt+W"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                        </Border>
                    </Grid>
                </Border>
            </StackPanel>
        </Border>
        
        <!-- 按钮 -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <ui:Button Content="关闭"
                       Width="100"
                       Appearance="Primary"
                       Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
